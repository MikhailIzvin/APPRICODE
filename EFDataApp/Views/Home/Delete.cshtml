@model EFDataApp.Models.VideoGame
@{
    ViewBag.Title = "Удалить";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>Разработчик</dt>
        <dd>
            @Html.DisplayFor(model => model.Develop)
        </dd>

        <dt>Жанр</dt>
        <dd>
            @Html.DisplayFor(model => model.Genres)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>